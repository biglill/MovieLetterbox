<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <stylesheets>
        <URL value="@Style.css" />
    </stylesheets>

    <VBox fx:id="signUpPane" alignment="CENTER" fillWidth="false" spacing="15.0" visible="false">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <Label styleClass="title-label" text="Create Account" />
        <Label text="Email Address" />
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        <TextField fx:id="signUpEmailField" promptText="you@example.com" styleClass="text-input" prefWidth="340" />
        <Label text="Password" />
        <PasswordField fx:id="signUpPasswordField" promptText="Create a password" styleClass="text-input" prefWidth="340" />
        <Button onAction="#handleSignUpAction" prefHeight="45.0" prefWidth="340.0" styleClass="button" text="Sign Up">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
        <Hyperlink onAction="#showSignInPane" text="Already have an account? Sign In" />
    </VBox>

    <VBox fx:id="signInPane" alignment="CENTER" fillWidth="false" spacing="15.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <Label styleClass="title-label" text="Welcome!" />
        <Label text="Email Address" />
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        <TextField fx:id="signInEmailField" promptText="you@example.com" styleClass="text-input" prefWidth="340" />
        <Label text="Password" />
        <PasswordField fx:id="signInPasswordField" promptText="Enter your password" styleClass="text-input" prefWidth="340" />
        <Button onAction="#handleSignInAction" prefHeight="45.0" prefWidth="340.0" styleClass="button" text="Sign In">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
        <Hyperlink onAction="#showSignUpPane" text="Don't have an account? Sign Up" />
    </VBox>

</StackPane>