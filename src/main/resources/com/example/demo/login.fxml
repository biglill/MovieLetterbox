<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <VBox fx:id="signInPane" alignment="CENTER" maxWidth="400" spacing="15.0" styleClass="root">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <Label styleClass="title-label" text="Welcome Back!" />
        <Label text="Please enter your details to sign in." />
        <Label fx:id="feedbackLabel" styleClass="feedback-label" wrapText="true" />
        <VBox spacing="5.0">
            <Label text="Email Address" />
            <TextField fx:id="signInEmailField" promptText="you@example.com" styleClass="text-input" />
        </VBox>
        <VBox spacing="5.0">
            <Label text="Password" />
            <PasswordField fx:id="signInPasswordField" promptText="Enter your password" styleClass="text-input" />
        </VBox>
        <Button onAction="#handleSignInAction" styleClass="button" text="Sign In" />
        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Don't have an account?" />
            <Hyperlink onAction="#showSignUpPane" text="Sign Up" />
        </HBox>
    </VBox>

    <VBox fx:id="signUpPane" alignment="CENTER" maxWidth="400" spacing="15.0" styleClass="root" visible="false">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <Label styleClass="title-label" text="Create an Account" />

        <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" styleClass="profile-image-view">
            <clip>
                <Circle centerX="50" centerY="50" radius="50" />
            </clip>
        </ImageView>
        <Button onAction="#handleChoosePhotoAction" styleClass="button" text="Choose Profile Photo" />
        <Label fx:id="profilePhotoLabel" styleClass="feedback-label" text="No photo selected." />
        <VBox spacing="5.0">
            <Label text="Full Name" />
            <TextField fx:id="signUpNameField" promptText="Enter your full name" styleClass="text-input" />
        </VBox>
        <VBox spacing="5.0">
            <Label text="Username" />
            <TextField fx:id="signUpUsernameField" promptText="Choose a username" styleClass="text-input" />
        </VBox>
        <VBox spacing="5.0">
            <Label text="Age" />
            <TextField fx:id="signUpAgeField" promptText="Enter your age" styleClass="text-input" />
        </VBox>
        <VBox spacing="5.0">
            <Label text="Email Address" />
            <TextField fx:id="signUpEmailField" promptText="you@example.com" styleClass="text-input" />
        </VBox>
        <VBox spacing="5.0">
            <Label text="Password" />
            <PasswordField fx:id="signUpPasswordField" promptText="Choose a strong password" styleClass="text-input" />
        </VBox>
        <Button onAction="#handleSignUpAction" styleClass="button" text="Sign Up">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Already have an account?" />
            <Hyperlink onAction="#showSignInPane" text="Sign In" />
        </HBox>
    </VBox>
</StackPane>